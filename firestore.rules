rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // UIDs listed here can READ any user's data (dev inspection only)
    function isAdmin() {
      return request.auth != null && request.auth.uid in [
        // Add your own UID here, e.g.: "abc123XYZexampleUID"
      ];
    }

    // Each user can read/write their own data.
    // Admins can additionally READ (but not write) any user's data.
    match /users/{userId}/data/{document} {
      allow read: if request.auth != null
                   && (request.auth.uid == userId || isAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
